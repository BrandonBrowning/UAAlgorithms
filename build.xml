<project>
	<target name="clean">
		<delete> 
			<fileset dir="target/classes/all/" includes="*.class"/>
			<fileset dir="target/classes/Math/PrimeFactorization/" includes="*.class"/>
			<fileset dir="target/classes/Math/PrimeGenerator/SieveOfEratosthenes/" includes="*.class"/>
			<fileset dir="target/classes/DynamicProgramming/LongestCommonSubstring/" includes="*.class"/>
			<fileset dir="target/classes/GraphAlgorithms/Floyds/" includes="*.class"/>
		</delete>
	</target>

	<target name="compile">
		<!-- Everything should compile to all where all the tests will be run -->
		<javac includeantruntime="false" srcdir="src/test/java/all" destdir="target/classes/all/"/>
		<javac includeantruntime="false" srcdir="src/main/GraphAlgorithms/Floyds/" destdir="target/classes/all/"/>
		<javac includeantruntime="false" srcdir="src/main/GraphAlgorithms/Trees/BFS/" destdir="target/classes/all/"/>
		<javac includeantruntime="false" srcdir="src/main/GraphAlgorithms/Trees/DFS/" destdir="target/classes/all/"/>
		<javac includeantruntime="false" srcdir="src/main/GraphAlgorithms/MST/Kruskals/" destdir="target/classes/all/"/>
		<javac includeantruntime="false" srcdir="src/main/DynamicProgramming/LongestCommonSubstring/" destdir="target/classes/all/"/>
		<javac includeantruntime="false" srcdir="src/main/Math/PrimeFactorization/" destdir="target/classes/all/"/>
		<javac includeantruntime="false" srcdir="src/main/Math/PrimeGenerator/" destdir="target/classes/all/"/>

		<!-- Each algorithm needs the data from the main directory compiled and the test directory -->

		<!-- Individual directory for PrimeFactorization -->
		<javac includeantruntime="false" srcdir="src/test/resources/" destdir="target/classes/Math/PrimeFactorization/"/>
		<javac includeantruntime="false" srcdir="src/main/Math/PrimeFactorization/" destdir="target/classes/Math/PrimeFactorization/"/>
		<javac includeantruntime="false" srcdir="src/test/java/Math/PrimeFactorization/" destdir="target/classes/Math/PrimeFactorization/"/>

		<!-- Individual directory for SieveOfEratosthenes -->
		<javac includeantruntime="false" srcdir="src/test/resources/" destdir="target/classes/Math/PrimeGenerator/SieveOfEratosthenes/"/>

		<!-- Individual directory for LongestCommonSubstring -->
		<javac includeantruntime="false" srcdir="src/test/resources/" destdir="target/classes/DynamicProgramming/LongestCommonSubstring/"/>

		<!-- Individual directory for Floyds -->
		<javac includeantruntime="false" srcdir="src/test/resources/" destdir="target/classes/GraphAlgorithms/Floyds/"/>
	</target>

<!-- Below are the definitions for building individual parts -->

	<target name="compile Floyds">
		<javac includeantruntime="false" srcdir="src/main/GraphAlgorithms/Floyds/" destdir="target/classes/all/"/>
	</target>

	<target name="compile BFS">
		<javac includeantruntime="false" srcdir="src/main/GraphAlgorithms/Trees/BFS/" destdir="target/classes/all/"/>
	</target>

